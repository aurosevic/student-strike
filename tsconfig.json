{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@content/*": ["content/*"],
      "@scripts/*": ["scripts/*"],
      "@layouts/*": ["layouts/*"],
      "@components/*": ["components/*"]
    }
  }
}
