---
import { file } from '@scripts/translate';
import HeaderLink from './HeaderLink.astro';
import { Icon } from "astro-icon/components";
import { ICON_SIZE_LG,ICON_SIZE_MD } from 'consts';

const { lang } = Astro.params;

const { frontmatter } = await file("zaglavlje", lang);
---

<header>
	<nav>
		<h2><a href=`/${lang}`>{frontmatter.naslov}</a></h2>

		<button popovertarget="menu-links" 
		style={`height: ${ICON_SIZE_LG}px;`}>
			<Icon name="burger-classic" size={ICON_SIZE_LG} />
		</button>

		<div id="menu-links" popover>
			<nav class="internal-links">
				<button popovertarget="menu-links" popovertargetaction="hide" style={`height: ${ICON_SIZE_MD}px;`}>
					<Icon name="close" size={ICON_SIZE_MD} />
				</button>
				{frontmatter.linkovi.map(({naziv, link}: {naziv: string, link: string}) => 
					<HeaderLink href={`/${lang}${link}`}>{naziv}</HeaderLink>
				)}
			</nav>
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		top: 0;
		position: sticky;
		z-index: 100;
	}

	h2 {
		margin: 0;
		font-size: 1em;
		padding-block: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}

	nav button {	
		background: none;
		color: inherit;
		border: none;
		padding: 0 0 0 0.5em;
		font: inherit;
		outline: inherit;	
		cursor: pointer;
	}

	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}

	.social-links,
	.social-links a {
		display: flex;
	}

	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}

	button {
		display: block;
	}

	:popover-open {
		display: block;
		position: fixed;
		margin: 0;
		border: none;
		inset: unset;
		top: 0;
		right: 0;
		height: 100vh;
		box-shadow: 0 0 2rem rgba(0, 0, 0, 0.2);

		transition: translate 0.2s;
		@starting-style {
			translate: 100% 0;
		}
	}

	[popover]::backdrop {
		display: block;
		opacity: 0;
	}

	[popover]:popover-open::backdrop {
		transition: opacity 0.2s;
		opacity: 1;
		pointer-events: none;
		background-color: rgba(0, 0, 0, 0.2);

		@starting-style {
			opacity: 0;
		}
	}

	:popover-open nav {
		padding: 2rem;
		flex-direction: column;
		align-items: start;
	}

	:popover-open a {
		padding-bottom: 0;
	}

	@media (min-width: 750px) {
		[popover] {
			display: contents;
		}

		button {
			display: none;
		}
	}
</style>
