---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>

		<button popovertarget="menu-links">
			Meni
		</button>

		<div id="menu-links" popover>
			<nav class="internal-links">
				<button popovertarget="menu-links" popovertargetaction="hide">Zatvori</button>
				<HeaderLink href="/sr-lat/o-blokadama">O Blokadama</HeaderLink>
				<HeaderLink href="/sr-lat/vesti">Vesti</HeaderLink>
				<HeaderLink href="/sr-lat/akcije">Akcije</HeaderLink>
				<HeaderLink href="/sr-lat/donacije">Donacije</HeaderLink>
				<HeaderLink href="/sr-lat/kontakt">Kontakt</HeaderLink>
			</nav>
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		top: 0;
		position: sticky;
		z-index: 100;
	}

	h2 {
		margin: 0;
		font-size: 1em;
		padding-block: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}

	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}

	.social-links,
	.social-links a {
		display: flex;
	}

	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}

	button {
		display: block;
	}

	:popover-open {
		display: block;
		position: fixed;
		margin: 0;
		border: none;
		inset: unset;
		top: 0;
		right: 0;
		height: 100vh;
		box-shadow: 0 0 2rem rgba(0, 0, 0, 0.2);

		transition: translate 0.2s;
		@starting-style {
			translate: 100% 0;
		}
	}

	[popover]::backdrop {
		display: block;
		opacity: 0;
	}

	[popover]:popover-open::backdrop {
		transition: opacity 0.2s;
		opacity: 1;
		pointer-events: none;
		background-color: rgba(0, 0, 0, 0.2);

		@starting-style {
			opacity: 0;
		}
	}

	:popover-open nav {
		padding: 2rem;
		flex-direction: column;
		align-items: start;
	}

	:popover-open a {
		padding-bottom: 0;
	}

	@media (min-width: 750px) {
		[popover] {
			display: contents;
		}

		button {
			display: none;
		}
	}
</style>
