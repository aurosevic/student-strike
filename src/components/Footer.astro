---
import { Icon } from "astro-icon/components";
const today = new Date();
const socialIcons = [
  {
    icon: "logo-instagram",
    link: "https://instagram.com/studenti_u_blokadi",
  },
  {
    icon: "logo-facebook",
    link: "https://www.facebook.com/people/Studenti-u-blokadi-UB/61571631694236/",
  },
  {
    icon: "logo-twitter",
    link: "https://x.com/studentblokade",
  },
  {
    icon: "logo-github",
    link: "https://github.com/blokada-rs/sajt",
  },
];
const iconSize = 26;
---

<footer>
  <div class="footer-container">
    <div>Blokade fakulteta {today.getFullYear()}.</div>
    <div class="social-links">
      {
        socialIcons.map(({ icon, link }) => (
          <a href={link} target="_blank" rel="noopener noreferrer" style={`height: ${iconSize}px;`}>
            <Icon name={icon} size={iconSize} class="icon" />
          </a>
        ))
      }
    </div>
  </div>
</footer>

<style>
  .footer-container {
    width: 70rem;
    max-width: calc(100% - 2em);
    margin: auto;
    padding: 0em 1em;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .social-links {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1em;
  }
  .icon {
    color: rgb(var(--gray));
  }
  .icon:hover {
    color: rgb(var(--gray-dark));
    cursor: pointer;
  }
  @media (max-width: 720px) {
    .footer-container {
      flex-direction: column;
    }
    .social-links {
      margin-top: 1em;
    }
  }
</style>
