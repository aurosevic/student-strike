---
import Card from "./Card.astro";

export interface Post {
  title: string;
  subtitle: string;
  thumbnail: string;
  link: string;
  date: Date;
}

interface Props {
  title: string;
  subtitle?: string;
  posts: Post[];
  numPosts: number;
}

const { title, subtitle, posts, numPosts } = Astro.props;
const newestPosts = posts
  .sort((a, b) => a.date.getTime() - b.date.getTime())
  .slice(0, numPosts);
---

<section class="recent-posts">
  <h2 class="section-title">{title}</h2>
  {subtitle && <p class="section-subtitle">{subtitle}</p>}
  <div class="posts-container">
    {newestPosts.map((post) => <Card {...post} />)}
  </div>
</section>

<style>
  .recent-posts {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 0px;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 24px;
  }

  .section-subtitle {
    font-size: 1rem;
    color: #666;
    text-align: center;
    margin-bottom: 20px;
  }

  .posts-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
  }
</style>
