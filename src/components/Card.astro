---
import FormattedDate from "./FormattedDate.astro";

interface Props {
  title: string;
  subtitle: string;
  thumbnail: string;
  link: string;
  date: Date;
}

const { title, subtitle, thumbnail, link, date } = Astro.props;
---

<article class="card">
  <a href={link} class="clear card-link">
    <img src={thumbnail} alt={title} class="thumbnail" loading="lazy" />
    <div class="content">
      <h3>{title}</h3>
      <FormattedDate date={date} />
      <p class="subtitle">{subtitle}</p>
    </div>
  </a>
</article>

<style>
  .card {
    background: #fff;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease-in-out;
  }

  .card:hover {
    transform: translateY(-5px);
  }

  .card-link {
    cursor: pointer;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .thumbnail {
    width: 100%;
    aspect-ratio: 3/2;
    object-fit: cover;
  }

  .content {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
      padding: 1rem;
  }

  .subtitle {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
      overflow: hidden;
  }
</style>
