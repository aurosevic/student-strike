---
import { Icon } from 'astro-icon/components';
import { ICON_SIZE_LG } from 'consts';
---

<div class="carousel">
  <div class="carousel-inner">
      <slot />
  </div>

  <div class="buttons">
    <button class="left" aria-label="Previous">
        <Icon name="mdi:chevron-left" size={ICON_SIZE_LG} />
    </button>
    <slot name="button" />
    <button class="right" aria-label="Next">
      <Icon name="mdi:chevron-right" size={ICON_SIZE_LG} />
    </button>
  </div>
</div>

<style>
    .carousel {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        min-width: 100%;
        max-width: 100%;
    }

    .carousel-inner {
        display: flex;
        gap: 1rem;
        overflow-y: auto;
        padding: 1rem 0.5rem;
        max-width: 100%;
    }

    .carousel-inner > :global(*) {
        min-width: 21rem;
        max-width: 21rem;
    }

    .buttons {
        margin-top: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem
    }

    button {
        aspect-ratio: 1;
        padding: 0.5rem;

        background-color: white;
    }
</style>

