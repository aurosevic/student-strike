---
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

interface Props {
	title: string;
	description: string;
    lang: string;
	image?: string;
}

const { title, description, lang, image } = Astro.props;
---

<!doctype html>
<html {lang}>
    <head>
        <BaseHead {title} {description} {image} />
        <slot name="head" />
    </head>
    <body>
        <Header />
        <slot name="above" />
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>
